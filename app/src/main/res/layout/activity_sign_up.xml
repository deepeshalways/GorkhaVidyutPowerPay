<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/leaf"
    tools:context="com.example.popla.gorkhavidyutpowerpay.activity.SignUp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:text="Enter Your Detail"
            android:textSize="25dp"
            android:paddingTop="16dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/testingInputLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:theme="@style/Theme.AppCompat"
            app:passwordToggleEnabled="true"
            >
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="8"
                android:background="#6ef4f4f4"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:id="@+id/edit1"
                android:hint="Enter Name"
                android:textColorHint="#fff"
                android:maxLines="1"
                android:layout_marginTop="5dp"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/testingInputLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:theme="@style/Theme.AppCompat"
            app:passwordToggleEnabled="true"
            >
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:id="@+id/edit2"
                android:hint="Enter Email"
                android:textColorHint="#fff"
                android:maxLines="1"
                android:background="#6ef4f4f4"
                android:layout_marginTop="20dp"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/testingInputLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:theme="@style/Theme.AppCompat"
            app:passwordToggleEnabled="true"
            >
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/edit3"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:maxLength="10"
                android:hint="Enter Contact Number"
                android:textColorHint="#fff"
                android:maxLines="1"
                android:background="#6ef4f4f4"
                android:layout_marginTop="20dp"
                /></android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/testingInputLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:theme="@style/Theme.AppCompat"
            app:passwordToggleEnabled="true"
            >
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/edit4"
                android:drawablePadding="78dp"
                android:padding="8dp"
                android:maxLength="12"
                android:hint="Enter 12 Digit Aadhar Number"
                android:textColorHint="#fff"
                android:maxLines="1"
                android:background="#6ef4f4f4"
                android:layout_marginTop="20dp"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/testingInputLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:theme="@style/Theme.AppCompat"
            app:passwordToggleEnabled="true"
            app:passwordToggleDrawable="@drawable/icon_selector"
            app:passwordToggleTint="@color/colorAccent">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/edit5"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:hint="Enter Password"
                android:textColorHint="#fff"
                android:maxLines="1"
                android:background="#6ef4f4f4"
                android:layout_marginTop="20dp"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/testingInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:theme="@style/Theme.AppCompat"
            app:passwordToggleEnabled="true"
            app:passwordToggleDrawable="@drawable/icon_selector"
            app:passwordToggleTint="@color/colorAccent">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/edit6"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:hint="ReEnter Password"
                android:textColorHint="#fff"
                android:maxLines="1"
                android:background="#6ef4f4f4"
                android:layout_marginTop="20dp"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/testingInputLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:theme="@style/Theme.AppCompat"
            app:passwordToggleEnabled="true"
            >
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:hint="Enter 9 Digit K Number"
                android:textColorHint="#fff"
                android:maxLines="1"
                android:maxLength="9"
                android:id="@+id/edit7"
                android:background="#6ef4f4f4"
                android:layout_marginTop="20dp"
                />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_login_sign_up"
            android:text="Sign Up"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:padding="16dp"
            android:clickable="true"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_marginTop="24dp"
            android:textSize="18sp"
            android:id="@+id/signup"
            />
      <!--  <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="show Data"
            android:onClick="show"/>
-->

    </LinearLayout>
</ScrollView>
