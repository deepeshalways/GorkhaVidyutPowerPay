        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/edittextApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"


            />
        <TextView
            android:id="@+id/edittextApp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/edittextApp"/>
        <TextView
            android:id="@+id/edittextApp3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittextApp2"
